datasource DS {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Contact {
  id Int @id @default(autoincrement())
  name String
  email String
  message String
  createdAt DateTime @default(now())
}

model Exercise {
  id Int @id @default(autoincrement())
  name String
  instructions String
  workout Workout @relation(fields: [workoutId], references: [id])
  workoutId Int
  reps Int?
  sets Int?
  weight Int?
  minutes Int?
  level String
  equipment String
  abs Boolean?
  arms Boolean?
  back Boolean?
  chest Boolean?
  legs Boolean?
  shoulders Boolean?
}

model Workout {
  id Int @id @default(autoincrement())
  exercises Exercise[]
  title String
}

model Account {
  id String @id @default(uuid())
  name String
  balance Float
  credits Credit[]
  debits Debit[]
}

model Credit {
  id Int @id @default(autoincrement())
  amount Float
  notes String
  date DateTime @default(now())
  account Account @relation(fields: [accountId], references: [id])
  accountId String
}

model Debit {
  id Int @id @default(autoincrement())
  amount Float
  notes String
  date DateTime @default(now())
  account Account @relation(fields: [accountId], references: [id])
  accountId String
}
